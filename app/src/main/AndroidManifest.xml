<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ver2point0.android.blocquery">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.ver2point0.android.blocquery.BloQueryApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ver2point0.android.blocquery.ui.activity.MainActivity"
            android:theme="@style/PrimaryBackgroundTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.ver2point0.android.blocquery.ui.activity.BloQueryActivity"
            android:theme="@style/PrimaryBackgroundTheme">
        </activity>
        <activity android:name=".ui.activity.QuestionsActivity">
        </activity>
    </application>
</manifest>

